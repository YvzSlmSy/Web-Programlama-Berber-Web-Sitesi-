@model BerberYonetimSistemi.Models.Calisan

<h2>Çalışan Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Ad</label>
        <input type="text" name="CalisanAdi" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Soyad</label>
        <input type="text" name="CalisanSoyadi" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Telefon</label>
        <input type="text" name="CalisanTelefon" class="form-control" />
    </div>

    <input type="hidden" name="BerberId" value="@ViewData["BerberId"]" />

    <button type="submit" class="btn btn-primary">Çalışan Ekle</button>
</form>
@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <p style="color: red;">@error.ErrorMessage</p>
}
