@model IEnumerable<BerberYonetimSistemi.Models.Randevu>
@{
    ViewData["Title"] = "Randevularım";
}

<h2>Randevularım</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        <strong>@ViewBag.Message</strong>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Berber Adı</th>
                <th>Çalışan Adı</th>
                <th>Randevu Tarihi</th>
                <th>Hizmet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Berber.BerberAdi</td>
                    <td>@randevu.Calisan.CalisanAdi</td>
                    <td>@randevu.RandevuTarih.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
